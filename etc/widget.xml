            </parameter>

            <parameter name="link5Label" xsi:type="text">
                <label>Link 5 Label</label>
            </parameter>
            <parameter name="link5URL" xsi:type="text">
                <label>Link 5 URL</label>
            </parameter>

            <parameter name="link6Label" xsi:type="text">
                <label>Link 6 Label</label>
            </parameter>
