<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="banners" class="SR\Widgets\Block\Widget\Banners" placeholder_image="SR_Widgets::images/widget_placeholders/banners.gif">
        <label>Banners</label>
        <description>Group of blocks with image, title and link</description>
        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="false">
                <options>
                    <option name="default" value="widget/banners.phtml" selected="true">
                        <label>Default</label>
                    </option>
                </options>
            </parameter>

            <parameter name="isSlider" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label>Enable slider</label>
            </parameter>
            <parameter name="isFullWidth" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label>Full width widget</label>
            </parameter>
            <parameter name="cssClass" xsi:type="text">
                <label>Css Class</label>
            </parameter>

            <parameter name="primaryBannerTitle" xsi:type="text">
                <label>Primary Banner Title</label>
            </parameter>
            <parameter name="primaryBannerLinkLabel" xsi:type="text">
                <label>Primary Banner Link Label</label>
            </parameter>
            <parameter name="primaryBannerLinkURL" xsi:type="text">
                <label>Primary Banner Link URL</label>
            </parameter>
            <parameter name="primaryBannerImagePath" xsi:type="block">
                <label>Primary Banner Image</label>
                <block class="SR\Widgets\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>

            <parameter name="banner1Title" xsi:type="text">
                <label>Banner 1 Title</label>
            </parameter>
            <parameter name="banner1LinkLabel" xsi:type="text">
                <label>Banner 1 Link Label</label>
            </parameter>
            <parameter name="banner1LinkURL" xsi:type="text">
                <label>Banner 1 Link URL</label>
            </parameter>
            <parameter name="banner1ImagePath" xsi:type="block">
                <label>Banner 1 Image</label>
                <block class="SR\Widgets\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>

            <parameter name="banner2Title" xsi:type="text">
                <label>Banner 2 Title</label>
            </parameter>
            <parameter name="banner2LinkLabel" xsi:type="text">
                <label>Banner 2 Link Label</label>
            </parameter>
            <parameter name="banner2LinkURL" xsi:type="text">
                <label>Banner 2 Link URL</label>
            </parameter>
            <parameter name="banner2ImagePath" xsi:type="block">
                <label>Banner 2 Image</label>
                <block class="SR\Widgets\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>

            <parameter name="banner3Title" xsi:type="text">
                <label>Banner 3 Title</label>
            </parameter>
            <parameter name="banner3LinkLabel" xsi:type="text">
                <label>Banner 3 Link Label</label>
            </parameter>
            <parameter name="banner3LinkURL" xsi:type="text">
                <label>Banner 3 Link URL</label>
            </parameter>
            <parameter name="banner3ImagePath" xsi:type="block">
                <label>Banner 3 Image</label>
                <block class="SR\Widgets\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>

            <parameter name="banner4Title" xsi:type="text">
                <label>Banner 4 Title</label>
            </parameter>
            <parameter name="banner4LinkLabel" xsi:type="text">
                <label>Banner 4 Link Label</label>
            </parameter>
            <parameter name="banner4LinkURL" xsi:type="text">
                <label>Banner 4 Link URL</label>
            </parameter>
            <parameter name="banner4ImagePath" xsi:type="block">
                <label>Banner 4 Image</label>
                <block class="SR\Widgets\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>

            <parameter name="banner5Title" xsi:type="text">
                <label>Banner 5 Title</label>
            </parameter>
            <parameter name="banner5LinkLabel" xsi:type="text">
