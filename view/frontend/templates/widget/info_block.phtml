<?php
use SR\Widgets\Block\Widget\InfoBlocks;

/**
 * @var InfoBlocks $block
 */
?>
<?php
$title = $block->getData('title');
$description = $block->getData('description');
$icon = $block->getData('icon');
$cssClass = $block->getData('cssClass');
?>

<li class="<?= $cssClass ?>">
    <i class="<?= $cssClass ?>-icon icon-<?= $icon ?>"></i>
    <div class="<?= $cssClass ?>-text">
        <?php if ($title): ?>
            <strong class="<?= $cssClass ?>-title">
                <span><?= __($title) ?></span>
            </strong>
        <?php endif; ?>
        <?php if ($description): ?>
            <p class="<?= $cssClass ?>-details"><?= $description ?></p>
        <?php endif; ?>
    </div>
</li>
